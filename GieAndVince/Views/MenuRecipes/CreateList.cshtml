                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Drinks</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        @foreach (var item2 in Model.RawItemModel.Where(f => f.RIDescription == "Drinks"))
                    {
