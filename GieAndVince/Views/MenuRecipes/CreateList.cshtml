    </div>

    <div class="col-md-7">
        @using (Html.BeginForm("Create", "MenuRecipes", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.MenuRecipeModel.MIRName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MenuRecipeModel.MIRName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MenuRecipeModel.MIRName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MenuRecipeModel.MIRPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MenuRecipeModel.MIRPrice, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MenuRecipeModel.MIRPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MenuRecipeModel.MIRRecipe, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <h5 class="text-danger">*Select Raw items for the specified checkboxes.</h5>
                            @Html.TextAreaFor(model => model.MenuRecipeModel.MIRRecipe, new { @class = "form-control", id = "divrecipe", rows = 13 })
                            @Html.ValidationMessageFor(model => model.MenuRecipeModel.MIRRecipe, "", new { @class = "text-danger", id = "divrecipe" })
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-5 col-md-offset-1">
                                <input type="submit" value="Create" class="btn-gv" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<div class="col-md-1"></div>
<br />
<div class="lh-120">&nbsp;</div>
