@model GieAndVince.Models.ViewModel.CombinedModels

@{
    ViewBag.Title = "Index";
}


<h2 align="center">Set Menu Items</h2>
<br /><br />
<div class="col-md-1"></div>
<div class="col-md-10">
    <div class="col-md-5">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Pasta</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @foreach (var item in Model.RawItemModel.Where(f => f.RIDescription == "Pasta"))
                    {
                        <input type="checkbox" name="recipe" value="@Html.DisplayFor(modelItem => item.RIName)" />@Html.DisplayFor(modelItem => item.RIName)<br />
                }
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
