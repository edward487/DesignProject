@model GieAndVince.Models.Db.MenuRecipe

@{
    ViewBag.Title = "Delete";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h1 class="modal-title" id="myModalLabel" align="center">Delete: @Html.DisplayFor(model => model.MIRName)</h1>
</div>

<div class="modal-body">
    <h3 align="center">Are you sure you want to delete this?</h3>
</div>

<div class="modal-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:250px;" />
        </div>
    }
</div>