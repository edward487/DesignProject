@model GieAndVince.Models.Db.MenuRecipe
@{
    ViewBag.Title = "Details";
}

<style>
    .form-group {
        display: flex;
        align-items: center;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h1 class="modal-title" id="myModalLabel" align="center"> @Html.DisplayFor(model => model.MIRName)</h1>
</div>

<div class="lh-50">&nbsp;</div>

<div class="col-md-offset-3">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.MIRName, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MIRName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.MIRPrice, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MIRPrice)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.MIRCategory, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MIRCategory)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.MIRSize, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MIRSize)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.MIRRecipe, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MIRRecipe)
            </div>
        </div>
        <div class="lh-50">&nbsp;</div>
        <div class="modal-footer"></div>
    </div>
</div>