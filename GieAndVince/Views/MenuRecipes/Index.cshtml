@model GieAndVince.Models.ViewModel.CombinedModels

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateList")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MenuRecipeModel.MIRName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.MenuRecipeList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MIRName)
            </td>
            <td>
                <button href="javascript:void(0);" class="anchorEdit glyphicon glyphicon-edit btn-warning" data-id="@item.MIRID" style="border-radius:5px; padding:5px;"></button>
                <button href="javascript:void(0);" class="anchorDetail glyphicon glyphicon-info-sign btn-info" data-id="@item.MIRID" style="border-radius:5px; padding:5px;"></button> 
                <button href="javascript:void(0);" class="anchorDelete glyphicon glyphicon-trash btn-danger" data-id="@item.MIRID" style="border-radius:5px; padding:5px;"></button>
            </td>
        </tr>
    }

</table>
<!--Edit Modal-->
<div id='myModalEdit' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContentEdit'></div>
        </div>
    </div>
</div>
<!--End Edit Modal-->
<!--Details Modal-->
<div id='myModalDetails' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContentDetails'></div>
        </div>
    </div>
</div>
<!--End Details Modal-->
<!--Delete Modal-->
<div id='myModalDelete' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContentDelete'></div>
        </div>
    </div>
</div>
<!--End Delete Modal-->
@section scripts
{
    <script type="text/javascript">
        //Edit Modal
        var TeamEditBackURL = '/MenuRecipes/Edit';
        $(function () {
            $(".anchorEdit").click(function () {
                //debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamEditBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        // debugger;
                        $('#myModalContentEdit').html(data);
                        $('#myModalEdit').modal(options);
                        $('#myModalEdit').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModalEdit').modal('hide');
            });
        });
        //End Edit Modal
        //Details Modal
        var TeamDetailPostBackURL = '/MenuRecipes/Details';
