                });
            });
            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModalDetails').modal('hide');
            });
        });
        //End Detail Modal
        //Delete Modal
        var TeamDeleteBackURL = '/MenuRecipes/Delete';
        $(function () {
            $(".anchorDelete").click(function () {
                //debugger;
