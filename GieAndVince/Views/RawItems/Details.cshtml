@model GieAndVince.Models.Db.RawItem

@{
    ViewBag.Title = "Details";
}


<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h1 class="modal-title" id="myModalLabel" align="center"> @Html.DisplayFor(model => model.RIName)</h1>
    </div>

    <div class="lh-50">&nbsp;</div>

    <div class="col-md-offset-3">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.RIName, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.RIName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RIDescription, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.RIDescription)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RIPrice, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.RIPrice)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RIQuantity, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.RIQuantity)
                </div>
            </div>

            <div class="lh-50">&nbsp;</div>

            <div class="modal-footer"></div>
        </div>
    </div>

</div>

